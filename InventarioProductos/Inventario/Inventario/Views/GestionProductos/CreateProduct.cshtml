
@model Inventario.Productos

@{
    ViewBag.Title = "Nuevo producto";
    Layout = "~/Views/Shared/_LayoutGral.cshtml";
}

<div class="container">
    <h1 class="text-center mb-4">Nuevo producto</h1>
    <form autocomplete="off">

        <div class="form-group">
            <label for="nombreProducto">Nombre del Producto</label>
            <input type="text" class="form-control" id="nombreProducto" placeholder="Ingrese el nombre del producto" required>
        </div>


        <div class="form-group">
            <label for="precioProducto">Precio ($)</label>
            <input type="number" class="form-control" id="precioProducto" placeholder="Ingrese el precio del producto" required>
        </div>

        <div class="form-group">
            <label for="categoriaProducto">Categoría</label>
            @Html.DropDownList("categoriaProducto", new SelectList(ViewBag.Categorias, "CategoriaID", "NombreCategoria"), "Seleccione una categoría", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="descripcionProducto">Descripción</label>
            <textarea class="form-control" id="descripcionProducto" rows="3" placeholder="Ingrese una breve descripción del producto" required></textarea>
        </div>

        <div class="text-center">
            <a class="btn btn-secondary" href="/Home/Index">Regresar</a>
            <button type="submit" class="btn btn-primary">Guardar Producto</button>
        </div>
    </form>
</div>
